@model Auvo.Api.Dto.RegistroDto

@{
    ViewData["Title"] = "Novo Registro";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-10">
        <form enctype="multipart/form-data" asp-action="Create">
            <div class="form-group">
                <label asp-for="NomeDoColaborador" class="control-label"></label>
                <input asp-for="NomeDoColaborador" class="form-control" />
                <span asp-validation-for="NomeDoColaborador" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoDoRegistro" class="control-label"></label><br />
                <input type="radio" value="1" asp-for="TipoDoRegistro" checked /> Entrada<br />
                <input type="radio" value="2" asp-for="TipoDoRegistro" /> Intervalo<br />
                <input type="radio" value="3" asp-for="TipoDoRegistro" /> Retorno Intervalo<br />
                <input type="radio" value="4" asp-for="TipoDoRegistro" /> Saída<br />
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
